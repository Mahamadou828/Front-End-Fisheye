{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "parser": "babel-eslint"
  },
  "rules": {
    "no-undef": "off",
    "no-unused-vars": "warn",
    "eqeqeq": "warn",
    "multiline-ternary": ["warn", "always-multiline"]
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended"
  ]
}
